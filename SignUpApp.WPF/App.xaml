<Application
    x:Class="SignUpApp.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SignUpApp.WPF"
    xmlns:viewmodels="clr-namespace:SignUpApp.WPF.ViewModels"
    xmlns:views="clr-namespace:SignUpApp.WPF.Views"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
                <views:RegisterView />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
